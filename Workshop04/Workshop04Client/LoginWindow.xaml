<Window x:Class="Workshop04Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop04Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <StackPanel>
        <Label Background="LightBlue" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"></TextBox>
        <Label Background="LightBlue" Padding="10">Password</Label>
        <PasswordBox x:Name="tb_password" Padding="10"></PasswordBox>
        <Label Background="LightBlue" Padding="10">Folder path</Label>
        <TextBox x:Name="tb_path" Padding="10"></TextBox>
        <Button Content="Login/Register" Padding="10" Margin="10" Click="Button_Click"></Button>
    </StackPanel>
</Window>
